@section scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <style type="text/css">
        .span3 {
            position: relative;
            height: 200px;
            overflow: auto;
        }

        .card-body {
            padding-bottom: 0rem;
        }
    </style>

    <script src="~/js/Insc1.js"></script>
    <script type="text/javascript">
         $(document).ready(function () {
            // Esconde el div al cargar la página
            $('#declaracionAceptar').hide();

            $('#fin-checkbox').on('change', function () {
                if ($(this).prop('checked')) {
                    $('#fin-checkbox').addClass('highlighted');
                    $('#declaracionAceptar').show(); // Muestra el div
                    $('#declaracionAdhesionClic').prop('disabled', false);
                } else {
                    $('#fin-checkbox').removeClass('highlighted');
                    $('#declaracionAceptar').hide(); // Oculta el div
                    $('#declaracionAdhesionClic').prop('disabled', true);
                }
            });
        });

         $(function() {
                // Selecciona el checkbox
                const checkbox = document.getElementById('fin-checkbox');

                // Función para hacer parpadear el checkbox
                function startBlinking(checkbox) {
                    checkbox.style.boxShadow = "0 0 5px red"; // Iniciar parpadeo con sombra
                    // Configura un parpadeo en intervalos
                    return setInterval(() => {
                        checkbox.style.boxShadow = checkbox.style.boxShadow === "0 0 5px red" ? "0 0 35px red" : "0 0 5px red";
                    }, 500); // Cambiar cada 500ms
                }

                // Inicia el parpadeo cuando la página se carga
                let blinkInterval = startBlinking(checkbox);

                // Evento para detener el parpadeo cuando el checkbox está marcado
                    checkbox.addEventListener('change', function() {
                        if (this.checked) {
                            clearInterval(blinkInterval); // Detener el parpadeo
                            checkbox.style.boxShadow = "";  // Resetear la sombra
                        } else {
                            blinkInterval = startBlinking(checkbox); // Volver a iniciar el parpadeo si no está marcado
                        }
                    });
                });

    </script>
        
}
