<p>
    <h2>Sistema de Inscripción / Actualización de Datos del IVUJ</h2>
</p>


<br/>
<div class="card text-center">

    

    <div class="card-header">
        <!-- Formulario -->
        <div class="row">

            <div class="col-sm-6">
                <div method="post" class="form-inline">

                    @Html.AntiForgeryToken()
                    <!--<form>-->

